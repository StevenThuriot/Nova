<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Controls="clr-namespace:Nova.Controls">
  
  <Style TargetType="Controls:Overlay">
    <Setter Property="Foreground" Value="{DynamicResource WhiteBrush}"/>
    <Setter Property="OverlayBrush" Value="{DynamicResource OverlayBrush}"/>
    <Setter Property="Visibility" Value="Collapsed"/>
    
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Controls:Overlay">
          <Grid>
            <Border Background="{TemplateBinding OverlayBrush}" CornerRadius="1" />
            
            <Controls:ProgressRing IsActive="{TemplateBinding IsActive}"
                                   Foreground="{TemplateBinding Foreground}"
                                   />
            
            <!--<TextBlock  Foreground="{TemplateBinding Foreground}" 
                        FontWeight="Bold" 
                        VerticalAlignment="Center" HorizontalAlignment="Center">
              Loading
            </TextBlock>-->
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
  
</ResourceDictionary>